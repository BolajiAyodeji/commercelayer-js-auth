{
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "src",
    "sourceMap": true,
    "noImplicitAny": true,
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "lib": ["esnext", "dom.iterable", "dom"],
    "resolveJsonModule": true,
    "types": ["node"],
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "#typings/*": ["typings/*"],
      "#typings": ["typings/index"]
    },
    "plugins": [
      {
        "transform": "@zerollup/ts-transform-paths",
        "exclude": ["*"]
      }
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "helpers"]
}
